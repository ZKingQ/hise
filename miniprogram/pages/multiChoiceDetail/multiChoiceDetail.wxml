<view class="page">
  <view class='top'>
    <view class='topLeft'>
      <text style='margin-left:20rpx;'>多项选择</text>
    </view>
    <view class='topRight'>
      <view class='topRightContent'>
        <text style='color:#1bd0bd;font-size:50rpx; font-style:italic;margin-right:10rpx;'>{{nowQuestionNumber+1}}</text>
        <text> / 5</text>
      </view>
    </view>
  </view>
  <view class='questionTitle'>
    <text>{{nowQuestion.question}}</text>
    <text>\r\n下列选项中，正确的是哪一项（）</text>
  </view>
  <view class='questionOption'>
    <view class='item'>
      <view class='characterNotChose' bindtap='choseA' wx:if="{{choseA==false}}">A</view>
      <view class='characterChose' bindtap='notChoseA' wx:if="{{choseA==true}}">A</view>
      <view class='option'>{{nowQuestion.options[0]}}</view>
    </view>
  </view>

  <view class='blankView'></view>

  <view class='submit' bindtap='submit' wx:if="{{nowQuestionNumber==5}}">
    <image class='handIcon' src='../../images/hand.png'></image>
    交卷
  </view>

  <view class='submit' bindtap='afterQuestion' wx:if="{{nowQuestionNumber!=5}}">
    <image class='handIcon' src='../../images/hand.png'></image>
    下一题
  </view>


</view>